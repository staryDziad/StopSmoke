<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OszczedzajCele">


    <EditText
        android:id="@+id/edCena_1"
        android:layout_width="256dp"
        android:layout_height="84dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Cena [zł]"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edCel_1" />

    <EditText
        android:id="@+id/edCel_1"
        android:layout_width="266dp"
        android:layout_height="81dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Na co oszczędzasz?"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btAkceptujCele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Akceptuj"
        app:layout_constraintBottom_toTopOf="@+id/imGifMoney"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edCena_1"
        app:layout_constraintVertical_bias="0.075" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imGifMoney"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"


        android:layout_marginBottom="44dp"
        android:src="@drawable/moneygif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>