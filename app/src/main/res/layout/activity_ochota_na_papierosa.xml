<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ochota_na_papierosa">

    <Button
        android:id="@+id/btBardzo"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:text="Bardzo"
        app:layout_constraintBottom_toTopOf="@+id/btStrasznie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btStrasznie"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:text="Strasznie"
        app:layout_constraintBottom_toTopOf="@+id/btTak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btBardzo" />

    <Button
        android:id="@+id/btTak"
        android:layout_width="120dp"
        android:layout_height="66dp"
        android:text="TAK!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btStrasznie" />
</androidx.constraintlayout.widget.ConstraintLayout>