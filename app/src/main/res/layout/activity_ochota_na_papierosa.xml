<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ochota_na_papierosa">

    <Button
        android:id="@+id/btBardzo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Bardzo"
        app:layout_constraintBottom_toTopOf="@+id/btStrasznie"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="155dp" />

    <Button
        android:id="@+id/btStrasznie"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Strasznie"
        app:layout_constraintBottom_toTopOf="@+id/btTak"
        app:layout_constraintTop_toBottomOf="@+id/btBardzo"
        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/btTak"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="TAK!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btStrasznie"
        tools:layout_editor_absoluteX="159dp" />
</androidx.constraintlayout.widget.ConstraintLayout>